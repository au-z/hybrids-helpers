{
  "name": "@auzmartist/hybrids-helpers",
  "version": "0.4.0",
  "type": "module",
  "main": "./dist/hybrids-helpers.umd.cjs",
  "module": "./dist/hybrids-helpers.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/hybrids-helpers.js",
      "require": "./dist/hybrids-helpers.umd.cjs"
    }
  },
  "files": [
    "README.md",
    "package.json",
    "dist"
  ],
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "dev": "vite",
    "docgen": "typedoc --out docs src/index.ts",
    "docs:preview": "pnpm docgen && pnpm dlx http-server --open -p 10000 ./docs",
    "test": "vitest test",
    "test:once": "vitest run test",
    "prepublishOnly": "pnpm build && pnpm test:once && pnpm docgen"
  },
  "dependencies": {
    "hybrids": "^8.2.5"
  },
  "peerDependencies": {
    "hybrids": "^8.2.5"
  },
  "devDependencies": {
    "happy-dom": "^12.10.3",
    "redux": "^4.2.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.7",
    "vitest": "^0.33.0",
    "wireit": "^0.9.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  }
}
