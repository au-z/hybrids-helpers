{
  "name": "@auzmartist/hybrids-helpers",
  "version": "1.0.0-alpha",
  "type": "module",
  "module": "./dist/hybrids-helpers.js",
  "exports": {
    ".": {
      "import": "./dist/hybrids-helpers.js",
      "types": "./dist/types/src/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "types": "./dist/types/src/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/types/src/index.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build:analyze": "wireit",
    "docgen": "wireit",
    "docs:preview": "pnpm docgen && pnpm dlx http-server --open -p 10000 ./docs",
    "test": "vitest",
    "test:once": "vitest run",
    "prepublishOnly": "pnpm docgen && pnpm test:once"
  },
  "wireit": {
    "dev": {
      "command": "vite",
      "files": [
        "src/**/*",
        "package.json",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "build": {
      "command": "tsc && vite build",
      "files": [
        "src/**/*",
        "package.json",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "build:analyze": {
      "command": "tsc && vite build --mode analyze",
      "files": [
        "src/**/*",
        "package.json",
        "tsconfig.json"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "docgen": {
      "command": "typedoc --out docs src/index.ts",
      "dependencies": [
        "build"
      ],
      "output": [
        "docs/**/*"
      ]
    }
  },
  "dependencies": {
    "hybrids": "^9.0.0"
  },
  "peerDependencies": {
    "hybrids": "^9.0.0"
  },
  "devDependencies": {
    "happy-dom": "^12.10.3",
    "rollup-plugin-analyzer": "^4.0.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.7",
    "vitest": "^1.6.0",
    "wireit": "^0.14.7"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  }
}
